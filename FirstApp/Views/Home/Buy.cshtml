@using FirstApp.Models
@model Purchase
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div>
    <h3>Форма оформления покупки</h3>
    @using (Html.BeginForm("Buy", "Home", FormMethod.Post))
    {
        @Html.Hidden("BookId", @ViewBag.BookId as string)
        @Html.HiddenFor(m => m.BookId)
        <table>
            <tr>
                <td>@Html.LabelFor(m => m.Person, "Введите имя:")</td>
                <td>
                    <
                    @Html.TextBoxFor(m => m.Person, "Иван")
                </td>
            </tr>
            <tr>
                <td>@Html.LabelFor(m => m.Address, "Введите адрес:")</td>
                <td>
                    @Html.TextBoxFor(m => m.Address, "ул. Пушкина")
                </td>
            </tr>
            <tr><td><input type="submit" value="Отправить" /> </td><td></td></tr>
        </table>
    }
</div>