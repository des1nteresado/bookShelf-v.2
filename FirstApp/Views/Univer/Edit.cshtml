@using FirstApp.Models.University
@model  Student
@{
    ViewBag.Title = "Edit";
}

@using (Html.BeginForm())
{
    <fieldset>
        <legend>Студент</legend>
        @Html.HiddenFor(model => model.Id)
        <b>Имя</b>
        @Html.EditorFor(model => model.Name)
        <b>Фамилия</b>
        @Html.EditorFor(model => model.Surname)
        <br />
        <b>Ср. Оценка</b>
        @Html.EditorFor(model => model.AvMark)
        <br />
        <b>Курсы</b>
        <br />
        @foreach (Course c in ViewBag.Courses)
        {
            <input type="checkbox" name="selectedCourses" value="@c.Id"
                   @(Model.Courses.Contains(c) ? "checked=\"checked\"" : "") />@c.Name <br />
            }

        <p>
            <input type="submit" value="Сохранить" />
        </p>
    </fieldset>
}